{# _partners_contact_modal.html.twig #}
<div id="partners-contact-modal" data-controller="modal" data-modal-id-value="partners-contact-modal" class="fixed inset-0 z-50 hidden">
    <div data-modal-target="overlay" class="modal-overlay fixed inset-0 bg-black/60 backdrop-blur-sm opacity-0" data-action="click->modal#backdrop"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div data-modal-target="panel"
             role="dialog"
             aria-modal="true"
             aria-labelledby="partners-contact-modal-title"
             tabindex="-1"
             class="modal-panel w-full max-w-md max-h-[90vh] overflow-y-auto bg-white/5 border border-white/10 backdrop-blur-md rounded-2xl shadow-xl opacity-0 translate-y-4 scale-95"
             data-action="click->modal#stopPropagation">

            <div class="p-6 md:p-8">
                <div class="flex items-start justify-between">
                    <h2 id="partners-contact-modal-title" class="text-xl font-semibold">Partner with StreetGuard</h2>
                    <button type="button" class="ml-3 rounded-full p-2 text-gray-300 hover:text-white hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-emerald-500 transition-colors duration-200" data-action="click->modal#close" aria-label="Close">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    </button>
                </div>

                <form class="mt-6 space-y-4" action="{{ path('partnership_submit') }}" method="post" data-action="submit->modal#submit">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('partnership_submit') }}">

                    <div class="grid grid-cols-1 gap-4">
                        <div>
                            <label class="block text-sm text-gray-300 mb-1" for="name">Full name</label>
                            <input type="text" name="name" required class="w-full rounded-lg bg-black/30 border border-white/10 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 px-3 py-2 transition-all duration-200" placeholder="Jane Doe" />
                        </div>
                        <div>
                            <label class="block text-sm text-gray-300 mb-1">Organization</label>
                            <input type="text" name="organization" class="w-full rounded-lg bg-black/30 border border-white/10 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 px-3 py-2 transition-all duration-200" placeholder="City of Example / NGO / Company" />
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm text-gray-300 mb-1">Email</label>
                                <input type="email" name="email" required class="w-full rounded-lg bg-black/30 border border-white/10 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 px-3 py-2 transition-all duration-200" placeholder="you@example.org" />
                            </div>
                            <div>
                                <label class="block text-sm text-gray-300 mb-1">Phone</label>
                                <input type="tel" name="phone" class="w-full rounded-lg bg-black/30 border border-white/10 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 px-3 py-2 transition-all duration-200" placeholder="+1 555 555 5555" />
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm text-gray-300 mb-1">How can we help?</label>
                            <select name="topic" required class="w-full rounded-lg bg-black/30 border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 px-3 py-2 transition-all duration-200">
                                <option value="">Select an option</option>
                                <option value="partnership">Partnership</option>
                                <option value="sponsorship">Sponsorship</option>
                                <option value="data">Data collaboration</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm text-gray-300 mb-1">Message</label>
                            <textarea name="message" rows="4" required class="w-full rounded-lg bg-black/30 border border-white/10 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 px-3 py-2 transition-all duration-200" placeholder="Tell us a bit about your goals"></textarea>
                        </div>

                        <div id="form-errors" class="hidden bg-red-50 border border-red-200 rounded-lg p-4">
                            <div class="flex items-start space-x-3 mb-3">
                                <div class="flex-shrink-0">
                                    <div class="w-5 h-5 bg-red-500 rounded-full flex items-center justify-center">
                                        <span class="text-white text-xs font-bold">âœ•</span>
                                    </div>
                                </div>
                                <div id="nb-errors" class="text-red-700 font-medium"></div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-6 flex items-center justify-end gap-3">
                        <button type="button" class="px-4 py-2 rounded-full border border-white/10 text-sm text-gray-200 hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-emerald-500 transition-all duration-200" data-action="click->modal#close">Cancel</button>
                        <button type="submit" class="px-5 py-2.5 rounded-full bg-gradient-to-r from-emerald-500 to-cyan-600 text-sm font-medium text-white hover:from-emerald-600 hover:to-cyan-700 focus:outline-none focus:ring-2 focus:ring-emerald-500 transition-all duration-200">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>