<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StreetGuard - Modale Contact</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Inter', ui-sans-serif, system-ui, -apple-system, sans-serif;
            background-color: #000;
            color: #fff;
        }

        /* Animation d'entrée/sortie pour la modale */
        @keyframes modalFadeIn {
            from { opacity: 0; transform: translateY(20px) scale(0.95); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }

        @keyframes overlayFadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .modal-open {
            overflow: hidden;
        }

        .modal-overlay {
            animation: overlayFadeIn 0.3s ease-out;
        }

        .modal-container {
            animation: modalFadeIn 0.4s cubic-bezier(0.23, 1, 0.32, 1);
        }

        /* Style pour les inputs */
        input, textarea, select {
            transition: all 0.2s ease;
        }

        input:focus, textarea:focus, select:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(110, 231, 183, 0.3);
        }

        /* Effet de pulsation pour le bouton */
        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4); }
            70% { box-shadow: 0 0 0 10px rgba(16, 185, 129, 0); }
            100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0); }
        }

        .pulse-button {
            animation: pulse 2s infinite;
        }

        /* Particules d'arrière-plan */
        .particles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .particle {
            position: absolute;
            background: rgba(110, 231, 183, 0.3);
            border-radius: 50%;
            opacity: 0.3;
            animation: float 20s infinite linear;
        }

        @keyframes float {
            0% { transform: translateY(0) translateX(0) rotate(0deg); }
            100% { transform: translateY(-100vh) translateX(100px) rotate(360deg); }
        }
    </style>
</head>
<body class="bg-black text-white min-h-screen flex items-center justify-center p-4">
<!-- Bouton pour ouvrir la modale (pour démonstration) -->
<button id="openModalBtn" class="bg-gradient-to-r from-emerald-500 to-cyan-600 text-white font-medium py-3 px-6 rounded-full hover:from-emerald-600 hover:to-cyan-700 transition-all shadow-lg hover:shadow-xl">
    Ouvrir la modale de contact
</button>

<!-- Overlay et modale -->
<div id="modalOverlay" class="fixed inset-0 bg-black/80 backdrop-blur-md z-50 flex items-center justify-center p-4 hidden modal-overlay">
    <div id="modalContainer" class="bg-gray-900/90 border border-white/10 rounded-2xl shadow-2xl w-full max-w-md modal-container overflow-hidden">
        <!-- En-tête de la modale -->
        <div class="p-6 border-b border-white/10 flex justify-between items-center">
            <h2 class="text-xl font-semibold text-white">Contactez-nous</h2>
            <button id="closeModalBtn" class="text-gray-400 hover:text-white transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>

        <!-- Corps de la modale -->
        <div class="p-6">
            <form id="contactForm" class="space-y-5">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Nom complet</label>
                    <input type="text" id="name" name="name" required
                           class="w-full bg-gray-800/50 border border-white/10 rounded-lg py-3 px-4 text-white placeholder-gray-400 focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all"
                           placeholder="Votre nom">
                </div>

                <div>
                    <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
                    <input type="email" id="email" name="email" required
                           class="w-full bg-gray-800/50 border border-white/10 rounded-lg py-3 px-4 text-white placeholder-gray-400 focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all"
                           placeholder="votre@email.com">
                </div>

                <div>
                    <label for="organization" class="block text-sm font-medium text-gray-300 mb-2">Organisation</label>
                    <input type="text" id="organization" name="organization"
                           class="w-full bg-gray-800/50 border border-white/10 rounded-lg py-3 px-4 text-white placeholder-gray-400 focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all"
                           placeholder="Nom de votre organisation">
                </div>

                <div>
                    <label for="interest" class="block text-sm font-medium text-gray-300 mb-2">Type de partenariat</label>
                    <select id="interest" name="interest"
                            class="w-full bg-gray-800/50 border border-white/10 rounded-lg py-3 px-4 text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all appearance-none">
                        <option value="" disabled selected>Sélectionnez une option</option>
                        <option value="authority">Autorité locale</option>
                        <option value="ngo">ONG</option>
                        <option value="sponsor">Sponsor/Investisseur</option>
                        <option value="other">Autre</option>
                    </select>
                </div>

                <div>
                    <label for="message" class="block text-sm font-medium text-gray-300 mb-2">Message</label>
                    <textarea id="message" name="message" rows="4" required
                              class="w-full bg-gray-800/50 border border-white/10 rounded-lg py-3 px-4 text-white placeholder-gray-400 focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all"
                              placeholder="Décrivez votre demande..."></textarea>
                </div>

                <div class="pt-2">
                    <button type="submit"
                            class="w-full py-3.5 px-6 bg-gradient-to-r from-emerald-500 to-cyan-600 text-white font-medium rounded-lg hover:from-emerald-600 hover:to-cyan-700 transition-all shadow-lg hover:shadow-xl flex items-center justify-center pulse-button">
                        Envoyer le message
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2">
                            <line x1="22" y1="2" x2="11" y2="13"></line>
                            <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                        </svg>
                    </button>
                </div>
            </form>
        </div>

        <!-- Pied de la modale -->
        <div class="p-4 border-t border-white/10 text-center text-xs text-gray-400">
            <p>Nous vous répondrons dans les plus brefs délais.</p>
        </div>
    </div>
</div>

<!-- Conteneur pour les particules -->
<div id="particles" class="particles"></div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Références aux éléments
        const openModalBtn = document.getElementById('openModalBtn');
        const closeModalBtn = document.getElementById('closeModalBtn');
        const modalOverlay = document.getElementById('modalOverlay');
        const modalContainer = document.getElementById('modalContainer');
        const contactForm = document.getElementById('contactForm');

        // Ouvrir la modale
        openModalBtn.addEventListener('click', function() {
            document.body.classList.add('modal-open');
            modalOverlay.classList.remove('hidden');
            // Focus sur le premier champ
            setTimeout(() => document.getElementById('name').focus(), 100);
        });

        // Fermer la modale
        function closeModal() {
            document.body.classList.remove('modal-open');
            modalOverlay.classList.add('hidden');
        }

        closeModalBtn.addEventListener('click', closeModal);

        // Fermer en cliquant à l'extérieur
        modalOverlay.addEventListener('click', function(e) {
            if (e.target === modalOverlay) {
                closeModal();
            }
        });

        // Fermer avec la touche Échap
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && !modalOverlay.classList.contains('hidden')) {
                closeModal();
            }
        });

        // Soumission du formulaire
        contactForm.addEventListener('submit', function(e) {
            e.preventDefault();

            // Simulation d'envoi
            const submitBtn = contactForm.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;

            submitBtn.innerHTML = 'Envoi en cours...';
            submitBtn.disabled = true;

            setTimeout(() => {
                alert('Merci pour votre message ! Nous vous contacterons bientôt.');
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
                closeModal();
                contactForm.reset();
            }, 1500);
        });

        // Génération des particules d'arrière-plan
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 30;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');

                const size = Math.random() * 10 + 2;
                const posX = Math.random() * 100;
                const delay = Math.random() * 20;
                const duration = Math.random() * 20 + 20;

                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${posX}%`;
                particle.style.top = `100%`;
                particle.style.animationDelay = `${delay}s`;
                particle.style.animationDuration = `${duration}s`;

                // Couleurs alternatives pour certaines particules
                if (i % 4 === 0) {
                    particle.style.background = 'rgba(34, 211, 238, 0.3)';
                } else if (i % 3 === 0) {
                    particle.style.background = 'rgba(239, 68, 68, 0.2)';
                }

                particlesContainer.appendChild(particle);
            }
        }

        createParticles();
    });
</script>
</body>
</html>