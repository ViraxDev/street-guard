{% extends 'bundles/TwigBundle/Exception/base.html.twig' %}

{% block title %}Server Error {{ parent() }}{% endblock %}

{% block body %}
    <div class="relative z-10 px-6 text-center max-w-2xl mx-auto">
        <div class="relative mb-8 animate-blur-in">
            <div class="w-24 h-24 mx-auto mb-6 relative">
                <div class="absolute inset-0 rounded-full border-2 border-red-400/30 animate-ping"></div>
                <div class="absolute inset-2 rounded-full border-2 border-red-400/40 animate-ping" style="animation-delay: 0.5s;"></div>
                <div class="w-full h-full rounded-full bg-gradient-to-br from-red-500 to-orange-600 flex items-center justify-center shadow-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
                        <path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3"></path>
                        <path d="M12 9v4"></path>
                        <path d="m12 17 .01 0"></path>
                    </svg>
                </div>
            </div>

            <h1 class="text-6xl md:text-8xl font-bold bg-gradient-to-r from-red-400 via-orange-400 to-yellow-400 bg-clip-text text-transparent leading-none">
                500
            </h1>
        </div>

        <div class="mb-8 space-y-4 animate-slide-up delay-200">
            <h2 class="text-2xl md:text-3xl font-semibold text-white">
                Security System Malfunction
            </h2>
            <p class="text-lg text-gray-300 max-w-lg mx-auto">
                Our security systems are experiencing technical difficulties. Our team has been alerted and is working to restore full protection.
            </p>
        </div>

        <!-- Status indicator -->
        <div class="animate-slide-up delay-300">
            <div class="inline-flex items-center px-4 py-2 rounded-full bg-red-500/20 border border-red-400/30 text-red-300">
                <div class="w-2 h-2 bg-red-400 rounded-full animate-pulse"></div>
                <span class="text-sm font-medium">Incident Detected</span>
            </div>
        </div>

        <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center items-center animate-slide-up delay-400">
            <a href="{{ path('app_home') }}"
               class="inline-flex items-center px-6 py-3 rounded-full bg-gradient-to-r from-emerald-500 to-cyan-600 text-white font-medium hover:from-emerald-600 hover:to-cyan-700 transition-all shadow-lg hover:shadow-xl">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                    <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <path d="m9 22 0-10 6 0 0 10"></path>
                </svg>
                Return Home
            </a>

            <button onclick="window.location.reload()"
                    class="inline-flex items-center px-6 py-3 rounded-full border border-white/20 text-gray-200 font-medium hover:bg-white/10 hover:border-white/30 transition-all">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                    <path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"></path>
                    <path d="M21 3v5h-5"></path>
                    <path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"></path>
                    <path d="M3 21v-5h5"></path>
                </svg>
                Try Again
            </button>
        </div>

        <div class="mt-16 animate-fade-in delay-700">
            <div class="p-6 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-md max-w-lg mx-auto">
                <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0">
                        <div class="w-10 h-10 rounded-full bg-emerald-500/20 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-emerald-400">
                                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"></path>
                                <path d="m9 12 2 2 4-4"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="text-left">
                        <h4 class="font-medium text-white mb-1">We're On It</h4>
                        <p class="text-sm text-gray-300 mb-3">Our security team has been automatically notified. We're working to restore service as quickly as possible.</p>

                        <a href="mailto:{{ admin_email }}?subject=Server Error 500 - Need Assistance"
                           class="inline-flex items-center px-6 py-3 rounded-full bg-gradient-to-r from-emerald-500 to-cyan-600 text-white font-medium hover:from-emerald-600 hover:to-cyan-700 transition-all shadow-lg hover:shadow-xl">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                                <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                                <path d="m22 7-10 5L2 7"></path>
                            </svg>
                            Contact Admin
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
