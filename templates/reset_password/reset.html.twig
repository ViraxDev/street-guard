{% extends 'security/base.html.twig' %}

{% block title %}{{ parent() ~ 'reset.password'|trans([], 'email') }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header bg-circle-shape bg-shape text-center p-2"><a class="font-sans-serif fw-bolder fs-4 z-1 position-relative link-light" href="{{ path('app_home') }}" data-bs-theme="light">{{ app_name }}</a></div>
        <div class="card-body p-4">
            <h3 class="text-center">{{ 'reset.password'|trans([], 'email') }}</h3>
            {% set extra_class = formSubmitted ? ' was-validated' : '' %}

            {{ form_start(resetForm, {'attr': {'class': 'mb-3 needs-validation' ~ extra_class }}) }}

                <div class="mb-3">
                    {{ form_label(resetForm.password.plainPassword.first, null, {
                        'label': 'new.password'|trans,
                        'class': 'form-label'
                    }) }}

                    {{ form_widget(resetForm.password.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(resetForm.password.plainPassword.second, null, {
                        'label': 'password.repeat'|trans,
                        'class': 'form-label'
                    }) }}

                    {{ form_widget(resetForm.password.plainPassword.second, {'attr': {'class': 'form-control'}}) }}

                    {% for error in field_errors(resetForm.password.plainPassword.first) %}
                        <div class="mt-3 position-relative invalid-tooltip">{{ error }}</div>
                    {% endfor %}
                </div>
                <button class="btn btn-primary d-block w-100 mt-3" type="submit" name="submit">{{ 'save'|trans }}</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
