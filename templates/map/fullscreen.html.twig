{% extends 'base.html.twig' %}

{% block title %}StreetGuard — Full Map{% endblock %}

{% block body %}

    <div class="relative min-h-24 bg-black text-white">
        <header class="absolute z-10 top-0 left-0 right-0 p-4 flex items-center justify-between">
            <a href="{{ path('app_home') }}" class="inline-flex items-center text-sm text-gray-300 hover:text-white">
                <!-- back icon -->
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
                <span class="ml-2">Back</span>
            </a>
            <div class="text-xs text-gray-400 bg-white/5 backdrop-blur-md px-3 py-1 rounded-full border border-white/10">
                StreetGuard · Full Map
            </div>
            <div class="w-10"></div>
        </header>
    </div>


    <div class="relative min-h-screen bg-black text-white">
        <!-- Fullscreen map -->
        <div id="mapbox-full"
             class="h-64 rounded-lg relative border border-white/10"
             data-controller="mapbox"
             data-mapbox-mode-value="full"
             data-mapbox-zoom-value="12"
             data-mapbox-pitch-value="45"
             data-mapbox-bearing-value="45"
             data-mapbox-lat-value="51.5074"
             data-mapbox-lng-value="-0.1276"
        ></div>
    </div>
{% endblock %}

{% block javascripts %}{% endblock %}
